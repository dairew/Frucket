<div class="container">
    <h1>What's Going Down?</h1>
    <h3>Upcoming List</h2>

    <table>
      <thead>
        <tr>
          <th>Event Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @pins.each do |pin| %>
          <tr>
            <td><%= pin.description %></td>
            <td><%= link_to 'Show ', pin %></td>
            <td><%= link_to 'Edit ', edit_pin_path(pin) %></td>
            <td><%= link_to 'Destroy ', pin, :method => :destroy, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

<br>

<%= link_to 'New Pin', new_pin_path %>
</div>